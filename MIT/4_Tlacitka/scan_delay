
;************** Delay (PDelReg[ms]) ***************
.DEF	PDelReg		= r20
.DEF	PDelReg0	= r21
.DEF	PDelReg1	= r22
.DEF	PDelReg2	= r2
; this is a delay subroutine 
Delay1m:	mov	PDelReg2, PDelReg
Delay1m0:	ldi	PDelReg0, 20
Delay1m1:	ldi	PDelReg1, 245
Delay1m2:	dec	PDelReg1
		brne	Delay1m2
		dec	PDelReg0
		brne	Delay1m1
		dec	PDelReg2
		brne	Delay1m0
		ret



scan:
	ldi TmpReg, 0x0f
	out DispDataD,TmpReg

	nop nop nop
	in TmpKey, DispDataI
	or Key, TmpKey
	
	ldi TmpReg, 0xf0
	out DispDataD,TmpReg

	nop nop nop nop nop
	in TmpKey, DispDataI
	or Key, TmpKey
	eor Key,TmpReg

	ldi TmpReg, 0xff
	out DispDataD,TmpReg 

ret


.exit
